<?php
/* Ler N valores reais. Ao final, imprimir a soma e a mdia aritmtica destes. (exerccio bsico e importante) */
print "Quantos valores quer digitar ? ";
$q = trim(fgets(STDIN));

$soma = 0;
for ($i=1; $i<=$q; $i++) {
	print "\nDigite o ".$i."valor: ";
	$valor = trim(fgets(STDIN));
	$soma = $soma + $valor;
}

print "Soma $soma\n";

$media = $soma / $q;
print "Media = $media\n"
